{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ensure-test-workspace",
      "type": "shell",
      "command": "mkdir -p ${workspaceFolder}/.local/test-workspace && cp -r ${workspaceFolder}/examples/. ${workspaceFolder}/.local/test-workspace/",
      "presentation": { "reveal": "never" }
    },
    {
      "label": "watch",
      "dependsOn": [
        "ensure-test-workspace",
        "npm: watch:tsc",
        "npm: watch:esbuild"
      ],
      "presentation": { "reveal": "never" },
      "group": { "kind": "build", "isDefault": true }
    },

    {
      "label": "npm: watch:esbuild",
      "type": "shell",
      "command": "devbox",
      "args": ["run", "--", "pnpm", "run", "watch:esbuild"],
      "group": "build",
      "problemMatcher": "$esbuild-watch",
      "isBackground": true,
      "presentation": { "group": "watch", "reveal": "never" }
    },

    {
      "label": "npm: watch:tsc",
      "type": "shell",
      "command": "devbox",
      "args": ["run", "--", "pnpm", "run", "watch:tsc"],
      "group": "build",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": { "group": "watch", "reveal": "never" }
    },

    {
      "label": "npm: watch-tests",
      "type": "shell",
      "command": "devbox",
      "args": ["run", "--", "pnpm", "run", "watch-tests"],
      "group": "build",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": { "reveal": "never", "group": "watchers" }
    },

    {
      "label": "tasks: watch-tests",
      "dependsOn": [
        "watch",
        "npm: watch-tests"
      ],
      "problemMatcher": []
    }
  ]
}