{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
  "packages": [
    "pnpm@latest",
    "nodejs@24"
  ],
  "shell": {
    "init_hook": [
      "echo 'MD Tasks development environment ready!' > /dev/null"
    ],
    "scripts": {
      "setup": "pnpm install",
      "compile": "pnpm run compile",
      "compile:core": "pnpm run compile:core",
      "compile:webview": "pnpm run compile:webview",
      "watch": "pnpm run watch",
      "watch:webview": "pnpm run watch:webview",
      "package": "pnpm run package",
      "check-types": "pnpm run check-types",
      "lint": "pnpm run lint",
      "lint:fix": "pnpm run lint:fix",
      "format": "pnpm run format",
      "test": "pnpm run test",
      "test:watch": "pnpm run test:watch",
      "test:coverage": "pnpm run test:coverage",
      "test:e2e": "pnpm run test:e2e",
      "ci": "pnpm run check-types && pnpm run lint && pnpm run test"
    }
  }
}
