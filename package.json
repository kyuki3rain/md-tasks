{
  "name": "md-tasks",
  "displayName": "MD Tasks",
  "description": "View and manage TODO lists in Markdown files as a Kanban board",
  "version": "0.1.1",
  "publisher": "kyuki3rain",
  "repository": {
    "type": "git",
    "url": "https://github.com/kyuki3rain/md-tasks.git"
  },
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mdTasks.openBoard",
        "title": "Open Kanban Board",
        "category": "MD Tasks",
        "icon": "$(layout)"
      },
      {
        "command": "mdTasks.openBoardFromEditor",
        "title": "Open Kanban Board",
        "category": "MD Tasks",
        "icon": "$(layout)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == markdown",
          "command": "mdTasks.openBoardFromEditor",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "mdTasks.openBoard",
          "when": "resourceLangId == markdown"
        },
        {
          "command": "mdTasks.openBoardFromEditor",
          "when": "false"
        }
      ]
    },
    "configuration": {
      "title": "MD Tasks",
      "properties": {
        "mdTasks.statuses": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": ["todo", "in-progress", "done"],
          "description": "ステータス一覧（カラムの表示順）"
        },
        "mdTasks.doneStatuses": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": ["done"],
          "description": "完了扱いとするステータス"
        },
        "mdTasks.defaultStatus": {
          "type": "string",
          "default": "todo",
          "description": "デフォルトステータス（[ ] の時、status未指定時に使用）"
        },
        "mdTasks.defaultDoneStatus": {
          "type": "string",
          "default": "done",
          "description": "デフォルト完了ステータス（[x] の時、status未指定時に使用）"
        },
        "mdTasks.sortBy": {
          "type": "string",
          "enum": ["markdown", "priority", "due", "alphabetical"],
          "default": "markdown",
          "enumDescriptions": [
            "ファイル内の出現順",
            "優先度順",
            "期限順",
            "アルファベット順"
          ],
          "description": "タスクのソート順"
        },
        "mdTasks.syncCheckboxWithDone": {
          "type": "boolean",
          "default": true,
          "description": "完了ステータス変更時にチェックボックスも連動させるか"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm --filter @md-tasks/core run compile && pnpm --filter @md-tasks/webview run build",
    "compile:core": "pnpm --filter @md-tasks/core run compile",
    "compile:webview": "pnpm --filter @md-tasks/webview run build",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node packages/core/esbuild.js --watch",
    "watch:tsc": "pnpm --filter @md-tasks/core run check-types:watch",
    "watch:webview": "pnpm --filter @md-tasks/webview run watch",
    "package": "pnpm --filter @md-tasks/core run check-types && pnpm --filter @md-tasks/core run lint && node packages/core/esbuild.js --production && pnpm --filter @md-tasks/webview run build",
    "compile-tests": "node packages/core/esbuild.e2e.js",
    "watch-tests": "node packages/core/esbuild.e2e.js --watch",
    "pretest": "pnpm --filter @md-tasks/core run check-types && pnpm --filter @md-tasks/core run lint",
    "pretest:e2e": "pnpm run compile-tests && pnpm run compile",
    "check-types": "pnpm --filter @md-tasks/core run check-types",
    "lint": "pnpm --filter @md-tasks/core run lint",
    "lint:fix": "pnpm --filter @md-tasks/core run lint:fix",
    "format": "pnpm --filter @md-tasks/core run format",
    "test": "pnpm --filter @md-tasks/core run test",
    "test:watch": "pnpm --filter @md-tasks/core run test:watch",
    "test:coverage": "pnpm --filter @md-tasks/core run test:coverage",
    "test:e2e": "pnpm run pretest:e2e && pnpm --filter @md-tasks/core exec vscode-test"
  },
  "devDependencies": {
    "@vscode/vsce": "^3.5.0",
    "npm-run-all": "^4.1.5"
  }
}
